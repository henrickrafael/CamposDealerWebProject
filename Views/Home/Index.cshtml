@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid rounded border border-light mt-3 mb-3 p-3">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-client-tab" data-bs-toggle="tab" data-bs-target="#nav-client" type="button" role="tab" aria-controls="nav-client" aria-selected="true">Clientes</button>
            <button class="nav-link" id="nav-product-tab" data-bs-toggle="tab" data-bs-target="#nav-product" type="button" role="tab" aria-controls="nav-product" aria-selected="false">Produtos</button>
            <button class="nav-link" id="nav-sales-tab" data-bs-toggle="tab" data-bs-target="#nav-sales" type="button" role="tab" aria-controls="nav-sales" aria-selected="false">Vendas</button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-client" role="tabpanel" aria-labelledby="nav-client-tab"></div><!--nav-client-->        
        <div class="tab-pane fade" id="nav-product" role="tabpanel" aria-labelledby="nav-product-tab"></div><!--nav-product-->
        <div class="tab-pane fade" id="nav-sales" role="tabpanel" aria-labelledby="nav-sales-tab"></div><!--nav-sales-->
    </div><!--nav-tabContent-->
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#nav-client").load("/Clientes");
            $("#nav-product").load("/Produtos");
            $("#nav-sales").load("/Vendas");
        });

        $("#inserirCliente").click(function () {
            console.log("click");
        });
    </script>
}                            