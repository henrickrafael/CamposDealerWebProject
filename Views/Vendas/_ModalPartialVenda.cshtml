<div class="modal fade" id="saleModalOperation" tabindex="-1" aria-labelledby="saleModalOperationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saleModalOperation">Inserir venda</h5>
                <button type="button" class="btn-close fechar" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <label type="text" hidden class="form-control" id="sale-id"></label>
                    <div class="mb-3">
                        <label for="produto" class="col-form-label">Produto</label>
                        <select id="product-id" class="form-select produto" aria-label="Selecione">
                            <option value="" selected>Selecione</option>
                            <option value="0">Zero</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cliente" class="col-form-label">Cliente</label>
                        <select id="client-id" class="form-select cliente" aria-label="Selecione">
                            <option value="" selected>Selecione</option>
                            <option value="0">Zero</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div mb="mb-3">
                        <label for="qtd" class="col-form-label">Quantidade</label>
                        <input type="number" min="0" class="form-control qtd" id="sale-qtd">
                    </div>
                    <div class="mb-3">
                        <label for="number" class="col-form-label">Valor unitário</label>
                        <input type="number" readonly placeholder="R$" min="0" class="form-control" id="unity-value">
                    </div>
                    <div class="mb-3">
                        <label for="number" class="col-form-label">Total</label>
                        <input type="number" placeholder="R$" min="0" class="form-control" id="total-value">
                    </div>
                    <input type="reset" hidden class="btn btn-primary reset-fields">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary fechar" data-bs-dismiss="modal">Fechar</button>
                <button type="button" id="inserirProdutoModal" class="btn btn-primary">Salvar</button>                
            </div>
        </div>
    </div>
</div>