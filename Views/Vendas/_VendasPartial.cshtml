@model List<Venda>

<div class="container p-2">
    <table class="table table-hover table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Data</th>
                <th scope="col">Total</th>
                <th scope="col">Cliente</th>
                <th scope="col">Produto</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        @foreach (Venda venda in Model)
        {
            <tr>
                <td>@venda.QtdVenda</td>
                <td>@venda.VlrUnitarioVenda.ToString("c")</td>
                <td>@venda.DthVenda</td>
                <td>@venda.VlrTotalVenda.ToString("c")</td>
                <td>@venda.Cliente.NmCliente</td>
                <td>@venda.Produto.DscProduto
                <td>
                    <button type="button" class="btn btn-warning btn-sm" href="@venda.IdVenda"><img class="icon-prop" src="~/images/pencil_icon.png" /></button> |
                    <button type="button" class="btn btn-danger btn-sm" href="@venda.IdVenda"><img class="icon-prop" src="~/images/delete_ic_icon.png" /></button>
                </td>
            </tr>
        }
    </table>
</div>
